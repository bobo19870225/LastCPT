<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp">

        <TextView
            android:id="@+id/current_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前版本："
            android:textSize="18sp" />

        <TextView
            android:layout_toEndOf="@+id/current_version"
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/current_version"
            android:layout_centerHorizontal="true"
            android:textColor="@color/tv_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/version_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_version"
            android:layout_marginTop="8dp"
            android:text="版本特性："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/version_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/version_feature"
            android:textSize="16sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/check_version"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@color/them_color"
        android:gravity="center"
        android:text="@string/update"
        android:textColor="@color/white"
        android:textSize="18sp">

    </Button>
</RelativeLayout>